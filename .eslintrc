{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:jsx-a11y/recommended",
        "plugin:import/errors",
        "prettier",
        "prettier/react"
    ],
    "parser": "babel-eslint",
    "plugins": ["react","import","jsx-a11y","react-hooks"],
    "rules": {
        "react/prop-types":0,
        "react-hooks/rules-of-hooks": "error"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "node": true,
        "es6": true,
        "browser": true
    },
    "settings": {
        "react":{
            "version":"detect"
        }
    }
}
